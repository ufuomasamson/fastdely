{
  "version": 2,
  "buildCommand": "cd client/admin && npm install && npm run build",
  "outputDirectory": "client/admin/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/client/admin/dist/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/client/admin/dist/$1"
    }
  ]
} 
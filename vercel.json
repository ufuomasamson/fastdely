{
  "version": 2,
  "builds": [
    {
      "src": "client/site/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/admin",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/site/assets/$1"
    },
    {
      "src": "/(.*)\\.(?:js|css|svg|jpg|jpeg|png|gif|ico|json)",
      "dest": "/client/site/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/client/site/index.html"
    }
  ]
} 
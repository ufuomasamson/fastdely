{
  "version": 2,
  "builds": [
    {
      "src": "client/site/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/admin",
      "dest": "/client/dist/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/client/dist/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/site/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/site/$1"
    }
  ]
} 
{
  "version": 2,
  "builds": [
    {
      "src": "client/site/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "client/admin",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client/admin && npm install && npm run build",
        "outputDirectory": "dist",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/admin/?",
      "dest": "/dist/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/client/site/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/client/site/js/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/client/site/img/$1"
    },
    {
      "src": "/lib/(.*)",
      "dest": "/client/site/lib/$1"
    },
    {
      "src": "/scss/(.*)",
      "dest": "/client/site/scss/$1"
    },
    {
      "src": "/mail/(.*)",
      "dest": "/client/site/mail/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/site/$1"
    }
  ]
} 